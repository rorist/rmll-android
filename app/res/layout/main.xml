<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dip"
        android:background="@drawable/main_bg"
        android:contentDescription="@string/desc_logo" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_margin="15dip"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:baselineAligned="false"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <Button
                        android:id="@+id/btn_day_1"
                        style="@style/day_button"
                        android:text="@string/day1" />

                    <Button
                        android:id="@+id/btn_day_3"
                        style="@style/day_button"
                        android:text="@string/day3" />

                    <Button
                        android:id="@+id/btn_day_5"
                        style="@style/day_button"
                        android:text="@string/day5" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <Button
                        android:id="@+id/btn_day_2"
                        style="@style/day_button"
                        android:text="@string/day2" />

                    <Button
                        android:id="@+id/btn_day_4"
                        style="@style/day_button"
                        android:text="@string/day4" />

                    <Button
                        android:id="@+id/btn_day_6"
                        style="@style/day_button"
                        android:text="@string/day6" />
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/btn_favorites"
                style="@style/main_button"
                android:text="@string/favorites" />

            <Button
                android:id="@+id/btn_search"
                style="@style/main_button"
                android:text="@string/search_label" />
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/progress"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dip" />

    <TextView
        android:id="@+id/db_ver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dip"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip" />

</LinearLayout>